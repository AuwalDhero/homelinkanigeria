{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "types": ["node"],
    "isolatedModules": true,
    "moduleDetection": "force",
    "allowJs": true,
    "jsx": "react-jsx",
    "baseUrl": ".", 
    "paths": {
      "@/*": ["./*"]
    },
    "allowImportingTsExtensions": false,
    "noEmit": false,
    "outDir": "dist"
  },
  "include": ["backend/**/*.ts", "frontend/**/*.ts", "frontend/**/*.tsx"],
  "exclude": ["node_modules"]
}