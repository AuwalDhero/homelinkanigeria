// backend/prisma/schema.prisma

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Role {
  ADMIN
  AGENT
}

enum Status {
  PENDING
  APPROVED
  REJECTED
  SUSPENDED
}

model User {
  id           String    @id @default(uuid())
  fullName     String
  email        String    @unique
  password     String
  phone        String
  whatsapp     String?
  businessName String?
  role         Role      @default(AGENT)
  status       Status    @default(PENDING)
  listings     Listing[]
  createdAt    DateTime  @default(now())
}

model Listing {
  id           String    @id @default(uuid())
  title        String
  description  String    @db.Text
  price        Float
  propertyType String    
  listingType  String    
  area         String    
  state        String    @default("FCT")
  city         String    @default("Abuja")
  images       String[]  
  video        String?
  status       Status    @default(PENDING)
  
  agentId      String
  agent        User      @relation(fields: [agentId], references: [id])
  
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}