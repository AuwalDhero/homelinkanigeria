// backend/prisma/schema.prisma.

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Role {
  ADMIN
  AGENT
}

enum Status {
  PENDING
  APPROVED
  REJECTED
  SUSPENDED
}

model User {
  id            String    @id @default(uuid())
  fullName      String
  email         String    @unique
  password      String
  phone         String
  whatsapp      String?
  businessName  String?
  role          Role      @default(AGENT)
  status        Status    @default(PENDING) // New agents must be approved
  listings      Listing[]
  createdAt     DateTime  @default(now())
}

model Listing {
  id            String    @id @default(uuid())
  title         String
  description   String    @db.Text
  price         Float
  propertyType  String    // e.g., 'House', 'Apartment', 'Plot'
  listingType   String    // 'RENT' or 'SALE'
  area          String    // e.g., 'Gwarinpa', 'Maitama'
  state         String    @default("FCT")
  city          String    @default("Abuja")
  images        String[]  // Cloudinary URLs
  video         String?
  status        Status    @default(PENDING) // Listings must be approved
  
  // Relationship
  agentId       String
  agent         User      @relation(fields: [agentId], references: [id])
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}